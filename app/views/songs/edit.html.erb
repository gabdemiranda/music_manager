<h1><%= 'Edit Song' %></h1>

<%= form_with model: @song do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :artist %><br>
    <%= form.text_field :artist %>
  </div>
  <div>
    <%= form.label :album %><br>
    <%= form.text_field :album %>
  </div>
  <div>
    <%= form.label :duration %><br>
    <%= form.number_field :duration %>
  </div>
  <div>
    <%= form.label :genre %><br>
    <%= form.text_field :genre %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back to List', songs_path %>
